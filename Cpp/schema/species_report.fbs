namespace Visualisation;

table SinglePlot {
    title:string;
    x:[float];
    y:[float];
    xlabel:string;
    ylabel:string;
    xmin:float;
    xmax:float;
    ymin:float;
    ymax:float;
}

table MultiPlot {
    title:string;
    plots:[SinglePlot];
}

table SpeciesReport {
    title:string (key, required);
    species:string (required);
    date:string;
    plots:[MultiPlot];
}

root_type SpeciesReport;
