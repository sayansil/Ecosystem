namespace Visualisation;

table SinglePlot {
    title:string;
    x:[float];
    y:[float];
}

table MultiPlot {
    title:string (key);
    xlabel:string;
    ylabel:string;
    plots:[SinglePlot];
}

table SpeciesReport {
    title:string (key, required);
    species:string (required);
    timestamp:string;
    plots:[MultiPlot];
}

root_type SpeciesReport;
